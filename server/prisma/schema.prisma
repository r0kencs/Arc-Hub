generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User { 
  id    Int     @id @default(autoincrement()) 
  email String  @unique
  name  String?
  posts Post[]
}

model Post { 
  id        Int     @id @default(autoincrement()) 
  title     String
  content   String?
  published Boolean @default(false) 
  author    User    @relation(fields: [authorId], references: [id]) 
  authorId  Int
}

model Map {
  id      String     @id
  name    String
  places  Place[]
}

model Place {
  id            Int       @id @default(autoincrement())
  name          String
  map           Map       @relation(fields: [mapId], references: [id])
  mapId         String
  lineupsFrom   Lineup[]  @relation("OriginPlace")
  lineupsTo     Lineup[]  @relation("TargetPlace")

  @@unique([name, mapId])
}

model UtilityType {
  id        String    @id
  name      String
  lineups Lineup[]
}

model Lineup {
  id            Int         @id @default(autoincrement())

  type          UtilityType @relation(fields: [typeId], references: [id])
  typeId        String

  originPlace   Place       @relation("OriginPlace", fields: [originPlaceId], references: [id])
  originPlaceId Int

  targetPlace   Place       @relation("TargetPlace", fields: [targetPlaceId], references: [id])
  targetPlaceId Int
}